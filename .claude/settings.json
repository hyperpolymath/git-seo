{
  "projectContext": {
    "name": "git-seo",
    "description": "CLI tool for Git repository SEO analysis and optimization",
    "language": "Julia",
    "version": "1.9+",
    "framework": "Comonicon.jl"
  },
  "codeStyle": {
    "language": "julia",
    "conventions": [
      "Follow Julia Style Guide",
      "Use descriptive variable names",
      "Add SPDX headers to all source files",
      "Document public functions with docstrings"
    ],
    "preferredPatterns": [
      "Type annotations for public APIs",
      "Multiple dispatch for extensibility",
      "Immutable structs with @kwdef"
    ]
  },
  "architecture": {
    "entrypoint": "src/GitSEO.jl",
    "modules": [
      "types.jl - Core data structures",
      "parsers.jl - URL and forge parsing",
      "analyzers.jl - API analysis",
      "scoring.jl - SEO scoring",
      "cli.jl - Command interface"
    ]
  },
  "compliance": {
    "standard": "RSR (Rhodium Standard Repositories)",
    "requiredFiles": [
      "README.adoc",
      "LICENSE.txt",
      "SECURITY.md",
      "CODE_OF_CONDUCT.adoc",
      "CONTRIBUTING.adoc"
    ],
    "spdxRequired": true
  },
  "security": {
    "httpsOnly": true,
    "noHardcodedSecrets": true,
    "envVarsForTokens": [
      "GITHUB_TOKEN",
      "GITLAB_TOKEN",
      "BITBUCKET_TOKEN"
    ]
  }
}
